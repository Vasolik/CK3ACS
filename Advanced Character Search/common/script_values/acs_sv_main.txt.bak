age_sort_function = {
    value = 1
    if = {
        limit = { age <= 45 }
        add = {
            value = -0.31
            multiply = age
            multiply = age
        }
        add = {
            value = 15.24
            multiply = age
        }
        add = 1
        multiply = 0.01
    }
    if = {
        limit = { age > 45 }
        add = {
            value = 0.04
            multiply = age
            multiply = age
        }
        add = {
            value = -12.94
            multiply = age
        }
        add = 996.93
        
        multiply = 0.001
    }
}
